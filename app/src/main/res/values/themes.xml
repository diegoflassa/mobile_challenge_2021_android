<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mobile_challenge_2021_android" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/my_light_blue</item>
        <item name="colorPrimaryVariant">@color/my_light_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/my_light_blue</item>
        <item name="colorSecondaryVariant">@color/my_orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Surface & BackgroundFloating. -->
        <item name="colorSurface">@color/white</item>
        <item name="colorBackgroundFloating">@color/my_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Mobile_challenge_2021_android.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Mobile_challenge_2021_android.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Mobile_challenge_2021_android.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>